<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_confirm_archive"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hipsterbait.android.activities.ConfirmArchiveActivity"
    android:gravity="center_horizontal"
    android:background="@color/hbCharcoal">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <com.hipsterbait.android.widgets.HBTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typeface="robotoCondensedBold"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="You are about to archive" />

    <com.hipsterbait.android.widgets.HBTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typeface="robotoCondensed"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="Cassette name"
        android:id="@+id/archive_confirm_cassette_name" />

    <com.hipsterbait.android.widgets.HBTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typeface="robotoCondensedLight"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="You can access archived cassettes through the Archive button in the top right corner of your Cassette Box."
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <com.hipsterbait.android.widgets.HBButton
        android:text="Archive Cassette"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/home_signup_button"
        android:background="@color/hbGreen"
        android:textAllCaps="false"
        android:textSize="23sp"
        app:typeface="robotoCondensed"
        android:onClick="confirmTapped"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <com.hipsterbait.android.widgets.HBButton
        android:text="@string/close"
        android:layout_width="fill_parent"
        android:id="@+id/bait_share_close_button"
        android:background="@color/hbCharcoal80"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:typeface="robotoCondensed"
        android:textAllCaps="false"
        android:textSize="23sp"
        android:onClick="closeButtonTapped" />

</LinearLayout>
