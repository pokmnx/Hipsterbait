<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_archive_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hipsterbait.android.activities.TooSlowActivity"
    android:background="@color/hbCharcoal">


    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2" />

    <com.hipsterbait.android.widgets.HBTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typeface="robotoCondensedBold"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="Surprise, You lose..."
        android:textColor="@color/hbOrange" />

    <com.hipsterbait.android.widgets.HBTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typeface="robotoCondensedLight"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="You were just about to capture that cassette. You've travelled far. You wanted it soooo bad! Then some ass-hat snatched it up right in front of you."
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp" />

    <com.hipsterbait.android.widgets.HBTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typeface="robotoCondensedBold"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="Be faster next time"
        android:id="@+id/HBTextView2" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <com.hipsterbait.android.widgets.HBTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typeface="robotoCondensedLight"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="Hide the cassette, then you can archive it later."
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/HBTextView3" />

    <com.hipsterbait.android.widgets.HBTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typeface="robotoCondensedLightItalic"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="- Joan Jett"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/HBTextView5" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <com.hipsterbait.android.widgets.HBButton
        android:text="@string/close"
        android:layout_width="fill_parent"
        android:id="@+id/too_slow_close_button"
        android:background="@color/hbOrange"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:typeface="robotoCondensed"
        android:textAllCaps="false"
        android:textSize="23sp"
        android:onClick="closeButtonTapped" />

</LinearLayout>
