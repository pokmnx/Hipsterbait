<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:paddingBottom="16dp"
        android:paddingTop="16dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/hint_griditem_polaroid"
                android:layout_width="125dp"
                android:layout_height="146dp"
                android:layout_marginEnd="8dp"
                android:background="@android:color/white"
                app:srcCompat="@drawable/hint_polaroid" />

            <ImageView
                android:id="@+id/hint_griditem_image"
                android:layout_width="93dp"
                android:layout_height="93dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/no_hint" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.hipsterbait.android.widgets.HBTextView
                android:id="@+id/hint_griditem_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location Hint"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                app:typeface="robotoCondensedBold" />

            <com.hipsterbait.android.widgets.HBTextView
                android:id="@+id/hint_griditem_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                app:typeface="robotoCondensed" />

            <com.hipsterbait.android.widgets.HBTextView
                android:id="@+id/hint_griditem_hashtags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="#HipsterBait #BaitHint"
                android:textColor="@color/hbDarkBlue"
                android:textSize="15sp"
                app:typeface="robotoCondensed" />

            <com.hipsterbait.android.widgets.HBTextView
                android:id="@+id/hint_griditem_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                app:typeface="robotoCondensed" />android

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/hint_griditem_avatar_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/avatar_generic" />

                <com.hipsterbait.android.widgets.HBTextView
                    android:id="@+id/hint_griditem_player_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:paddingStart="8dp"
                    android:text="Name"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    app:typeface="robotoCondensed" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/hint_griditem_flag_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hint_griditem_flag"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0"
                    android:scaleType="fitEnd"
                    app:srcCompat="@drawable/flag_orange" />

                <com.hipsterbait.android.widgets.HBTextView
                    android:id="@+id/hint_griditem_flag_label"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:paddingStart="8dp"
                    android:text="Flag as innapropriate"
                    android:textColor="@color/hbOrange"
                    android:textSize="15sp"
                    app:typeface="robotoCondensed" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hbCharcoal40" />
</LinearLayout>
