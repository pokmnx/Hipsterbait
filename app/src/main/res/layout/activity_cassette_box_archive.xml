<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_cassette_box_archive"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hipsterbait.android.activities.CassetteBoxArchiveActivity"
    android:background="@color/hbCharcoal80">

    <com.hipsterbait.android.widgets.HBTextView
        android:text="My Archive"
        android:layout_width="match_parent"
        android:id="@+id/archive_label"
        android:gravity="center"
        app:typeface="robotoCondensedBold"
        android:textSize="24sp"
        android:background="@color/hbCharcoal"
        android:layout_height="36dp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp">

        <com.hipsterbait.android.widgets.HBButton
            android:id="@+id/archive_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/hbGreen"
            android:tag="1"
            android:text="Date"
            android:textAllCaps="false"
            android:textSize="15sp"
            app:typeface="robotoCondensed" />

        <com.hipsterbait.android.widgets.HBButton
            android:text="Rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/archive_button_2"
            android:layout_weight="1"
            android:background="@color/hbCharcoal"
            android:layout_marginStart="4dp"
            app:typeface="robotoCondensed"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:tag="2" />

        <com.hipsterbait.android.widgets.HBButton
            android:text="Points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/archive_button_3"
            android:layout_weight="1"
            android:background="@color/hbCharcoal"
            android:layout_marginStart="4dp"
            app:typeface="robotoCondensed"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:tag="3" />

        <com.hipsterbait.android.widgets.HBButton
            android:text="Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/archive_button_4"
            android:layout_weight="1"
            android:background="@color/hbCharcoal"
            android:layout_marginStart="4dp"
            app:typeface="robotoCondensed"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:tag="4" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cassette_archive_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp" />

</LinearLayout>
