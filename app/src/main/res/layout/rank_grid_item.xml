<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/hbCharcoal"
    android:layout_height="46dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/hbCharcoal80"
        android:paddingBottom="4dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:paddingTop="4dp"
        android:layout_height="45dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/locked_badge_bg"
            android:id="@+id/rank_item_imageview"
            android:layout_weight="0" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.hipsterbait.android.widgets.HBTextView
                android:text='Level 1 "Roadie"'
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rank_item_textview"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:typeface="robotoCondensedBold"
                android:textSize="15sp" />

            <com.hipsterbait.android.widgets.HBTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rank_item_date"
                app:typeface="robotoCondensed"
                android:textSize="15sp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/open_arrow_on_pink"
            android:id="@+id/rank_item_disclosure"
            android:layout_weight="0"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" />
    </LinearLayout>
</LinearLayout>